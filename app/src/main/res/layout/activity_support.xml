<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SupportActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp">

        <!-- Menu icon -->
        <ImageView
            android:id="@+id/menu_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_menu"
            android:contentDescription="Menu icon"
            android:layout_alignParentStart="true"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="8dp"
            android:onClick="openDrawer" />

        <!-- Contact Section -->
        <TextView
            android:id="@+id/contact_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/menu_icon"
            android:layout_marginTop="32dp"
            android:text="Contact"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/email_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/contact_title"
            android:layout_marginTop="16dp"
            android:text="Email:"
            android:textStyle="bold"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/email_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/email_label"
            android:text="materialismsupport@gmail.com"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/email_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/email_value"
            android:text="client support"
            android:textSize="14sp"
            android:textStyle="italic" />

        <TextView
            android:id="@+id/phone_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/email_description"
            android:layout_marginTop="16dp"
            android:text="Phone number:"
            android:textStyle="bold"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/phone_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/phone_label"
            android:text="+38679546789"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/phone_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/phone_value"
            android:text="client support"
            android:textSize="14sp"
            android:textStyle="italic" />

        <!-- Report Issue Section -->
        <TextView
            android:id="@+id/report_issue_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/phone_description"
            android:layout_marginTop="32dp"
            android:text="Report issue"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/report_email_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/report_issue_title"
            android:layout_marginTop="16dp"
            android:text="Email:"
            android:textStyle="bold"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/report_email_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/report_email_label"
            android:text="materialismtechteam@gmail.com"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/report_email_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/report_email_value"
            android:text="client technical team"
            android:textSize="14sp"
            android:textStyle="italic" />

    </RelativeLayout>

    <com.google.android.material.navigation.NavigationView
        android:id="@+id/nav_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:fitsSystemWindows="true">
        <include layout="@layout/burger_menu_layout" />
    </com.google.android.material.navigation.NavigationView>
</androidx.drawerlayout.widget.DrawerLayout>
