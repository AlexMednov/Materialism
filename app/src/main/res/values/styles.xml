<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <!-- Light mode specific attributes -->
        <item name="android:textColorPrimary">@color/colorPrimaryText</item>
        <item name="android:windowBackground">@color/colorBackgroundLight</item>
    </style>

    <style name="AppTheme.Dark" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Customize your dark theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <!-- Dark mode specific attributes -->
        <item name="android:textColorPrimary">@color/colorPrimaryTextDark</item>
        <item name="android:windowBackground">@color/colorBackgroundDark</item>
    </style>
</resources>